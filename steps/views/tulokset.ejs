<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <title>Upload</title>
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <%- include('includes/header') %>
        <main class="mdl-layout__content">
            <div class="page-content center-content">
                <div class="table-container">
                    <% if (virhe) { %>
                        <h3 style="color: red;"><%= virhe %></h3>
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" href="/">Etusivulle</a>
                    <% } else { %>
                        <h5>Askeleet: <%= months.reduce((sum, month) => sum + parseInt(month.askeleet), 0) %></h5>
                        <h5>Kuukausi: <%= months.length > 0 ? monthName + ' ' + months[0].vvvv : '' %></h5>
                        <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" href="/">Etusivulle</a>
                        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                            <thead>
                                <tr>
                                    <th class="mdl-data-table__cell--non-numeric">PVM</th>
                                    <th class="mdl-data-table__cell--non-numeric">Askeleet</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% months.forEach(month => { %>
                                    <tr>
                                        <td class="mdl-data-table__cell--non-numeric"><%= `${month.pp}.${month.kk}.${month.vvvv}` %></td>
                                        <td class="mdl-data-table__cell--non-numeric"><%= month.askeleet %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } %>
                </div>
                <br>
                
            </div>
        </main>
    </div>
    <%- include('includes/footer') %>
</body>
</html>